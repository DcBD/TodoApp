<UserControl x:Class="DesktopWPFUI.Controls.TaskView.TaskBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopWPFUI.Controls.TaskView"
             mc:Ignorable="d" 
             d:DesignHeight="250" d:DesignWidth="150" Width="150" Height="150" Padding="5">
    <Grid Background="White" Width="150" Height="150">
        <StackPanel>
            <TextBlock Text="{Binding Name}" FontSize="20" HorizontalAlignment="Center"  TextAlignment="Center" TextTrimming="CharacterEllipsis"/>
        </StackPanel>
    </Grid>
</UserControl>

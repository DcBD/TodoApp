<UserControl x:Class="DesktopWPFUI.Controls.TaskView.TaskBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DesktopWPFUI.Controls.TaskView"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500" Height="50" Loaded="UserControl_Loaded" Margin="0,4"  Cursor="Hand" MouseDown="UserControl_MouseDown">
    <Grid Background="#7F0C6CBB">
        <StackPanel Orientation="Horizontal">
            <Image Name="ImageStatusIndicator"  Margin="10"/>
            <TextBlock Text="{Binding Name}" FontSize="20" HorizontalAlignment="Center"  TextAlignment="Center" TextTrimming="CharacterEllipsis" Foreground="White" VerticalAlignment="Center" FontWeight="Bold"/>
        </StackPanel>
    </Grid>
</UserControl>
